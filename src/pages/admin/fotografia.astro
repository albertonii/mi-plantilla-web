---

<AdminLayout title="Gesti√≥n de Fotograf√≠a">
  <div class="flex h-screen bg-dark-950">
    <Sidebar />
    
    <div class="flex-1 flex flex-col lg:ml-64">
      <Header title="Fotograf√≠a" subtitle="Gestiona tu galer√≠a de fotograf√≠as" />
      
      <main class="flex-1 overflow-y-auto p-6">
        <!-- Actions Bar -->
        <div class="flex justify-between items-center mb-6">
          <div class="flex space-x-4">
            <button
              id="add-photo-btn"
              class="btn-primary"
            >
              <span class="mr-2">üì∑</span>
              A√±adir Fotograf√≠a
            </button>
            <button
              id="export-btn"
              class="px-4 py-2 border border-gray-600 text-gray-300 rounded-lg hover:bg-gray-800 transition-colors"
            >
              <span class="mr-2">üìä</span>
              Exportar
            </button>
          </div>
          
          <div class="flex space-x-2">
            <select id="status-filter" class="px-3 py-2 bg-dark-800 border border-dark-600 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-primary-500">
              <option value="">Todos los estados</option>
              <option value="available">Disponible</option>
              <option value="sold">Vendida</option>
            </select>
            <input
              id="search-input"
              type="text"
              placeholder="Buscar fotograf√≠as..."
              class="px-3 py-2 bg-dark-800 border border-dark-600 rounded-lg text-gray-300 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500"
            />
          </div>
        </div>

        <!-- Loading State -->
        <div id="loading-state" class="hidden flex items-center justify-center py-12">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary-500"></div>
          <span class="ml-3 text-gray-400">Cargando fotograf√≠as...</span>
        </div>

        <!-- Error State -->
        <div id="error-state" class="hidden bg-red-900 border border-red-700 rounded-lg p-4 mb-6">
          <div class="flex items-center">
            <span class="text-red-400 mr-2">‚ùå</span>
            <span class="text-red-200" id="error-message">Error al cargar las fotograf√≠as</span>
          </div>
        </div>

        <!-- Photos Grid -->
        <div id="photos-grid" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4">
          <!-- Las fotograf√≠as se cargar√°n din√°micamente aqu√≠ -->
        </div>

        <!-- Empty State -->
        <div id="empty-state" class="hidden text-center py-12">
          <div class="text-6xl mb-4">üì∑</div>
          <h3 class="text-xl font-semibold text-gray-300 mb-2">No hay fotograf√≠as</h3>
          <p class="text-gray-400 mb-6">Comienza a√±adiendo tu primera fotograf√≠a a la galer√≠a</p>
          <button id="empty-add-btn" class="btn-primary">
            <span class="mr-2">üì∑</span>
            A√±adir Primera Fotograf√≠a
          </button>
        </div>
      </main>
    </div>
  </div>

  <!-- Modal para a√±adir/editar fotograf√≠a -->
  <div id="photo-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-dark-800 rounded-lg max-w-2xl w-full max-h-screen overflow-y-auto">
        <div class="p-6">
          <div class="flex justify-between items-center mb-6">
            <h3 class="text-xl font-semibold text-gray-100" id="modal-title">
              A√±adir Fotograf√≠a
            </h3>
            <button
              id="close-modal"
              class="text-gray-400 hover:text-white transition-colors"
            >
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
          
          <form id="photo-form" class="space-y-4">
            <input type="hidden" id="photo-id" name="id" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                  T√≠tulo *
                </label>
                <input
                  type="text"
                  id="photo-title"
                  name="title"
                  required
                  class="w-full px-3 py-2 bg-dark-700 border border-dark-600 rounded-lg text-gray-100 focus:outline-none focus:ring-2 focus:ring-primary-500"
                />
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                  Precio
                </label>
                <input
                  type="number"
                  id="photo-price"
                  name="price"
                  step="0.01"
                  class="w-full px-3 py-2 bg-dark-700 border border-dark-600 rounded-lg text-gray-100 focus:outline-none focus:ring-2 focus:ring-primary-500"
                />
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">
                Descripci√≥n
              </label>
              <textarea
                id="photo-description"
                name="description"
                rows="3"
                class="w-full px-3 py-2 bg-dark-700 border border-dark-600 rounded-lg text-gray-100 focus:outline-none focus:ring-2 focus:ring-primary-500"
              ></textarea>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                  Ubicaci√≥n
                </label>
                <input
                  type="text"
                  id="photo-location"
                  name="location"
                  class="w-full px-3 py-2 bg-dark-700 border border-dark-600 rounded-lg text-gray-100 focus:outline-none focus:ring-2 focus:ring-primary-500"
                />
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                  Fecha (opcional)
                </label>
                <input
                  type="date"
                  id="photo-date"
                  name="date"
                  class="w-full px-3 py-2 bg-dark-700 border border-dark-600 rounded-lg text-gray-100 focus:outline-none focus:ring-2 focus:ring-primary-500"
                />
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">
                Etiquetas (separadas por comas)
              </label>
              <input
                type="text"
                id="photo-tags"
                name="tags"
                class="w-full px-3 py-2 bg-dark-700 border border-dark-600 rounded-lg text-gray-100 focus:outline-none focus:ring-2 focus:ring-primary-500"
                placeholder="naturaleza, paisaje, amanecer"
              />
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">
                Estado
              </label>
              <select
                id="photo-status"
                name="status"
                class="w-full px-3 py-2 bg-dark-700 border border-dark-600 rounded-lg text-gray-100 focus:outline-none focus:ring-2 focus:ring-primary-500"
              >
                <option value="available">Disponible</option>
                <option value="sold">Vendida</option>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">
                Imagen *
              </label>
              <div class="space-y-3">
                <!-- Opci√≥n 1: Subir archivo -->
                <div>
                  <label class="flex items-center space-x-2 cursor-pointer">
                    <input
                      type="radio"
                      name="image_source"
                      value="upload"
                      checked
                      class="text-primary-600 focus:ring-primary-500"
                    />
                    <span class="text-gray-300">Subir archivo</span>
                  </label>
                  <div id="upload-section" class="mt-2">
                    <input
                      type="file"
                      id="photo-image-file"
                      name="image_file"
                      accept="image/*"
                      class="hidden"
                    />
                    <label
                      for="photo-image-file"
                      class="flex items-center justify-center w-full h-32 border-2 border-dashed border-gray-600 rounded-lg cursor-pointer hover:border-primary-500 transition-colors"
                    >
                      <div class="text-center">
                        <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                        </svg>
                        <p class="mt-2 text-sm text-gray-400">Haz clic para seleccionar una imagen</p>
                        <p class="text-xs text-gray-500">JPEG, PNG, WebP, GIF, SVG (m√°x. 50MB)</p>
                      </div>
                    </label>
                    <div id="file-preview" class="hidden mt-3">
                      <div class="flex items-center space-x-3 p-3 bg-dark-700 rounded-lg">
                        <img id="preview-image" class="w-12 h-12 object-cover rounded" />
                        <div class="flex-1">
                          <p id="file-name" class="text-sm text-gray-300"></p>
                          <p id="file-size" class="text-xs text-gray-500"></p>
                        </div>
                        <button
                          type="button"
                          id="remove-file"
                          class="text-red-400 hover:text-red-300"
                        >
                          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                          </svg>
                        </button>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Opci√≥n 2: URL externa -->
                <div>
                  <label class="flex items-center space-x-2 cursor-pointer">
                    <input
                      type="radio"
                      name="image_source"
                      value="url"
                      class="text-primary-600 focus:ring-primary-500"
                    />
                    <span class="text-gray-300">URL externa</span>
                  </label>
                  <div id="url-section" class="hidden mt-2">
                    <input
                      type="url"
                      id="photo-image-url"
                      name="image_url"
                      class="w-full px-3 py-2 bg-dark-700 border border-dark-600 rounded-lg text-gray-100 focus:outline-none focus:ring-2 focus:ring-primary-500"
                      placeholder="https://ejemplo.com/imagen.jpg"
                    />
                  </div>
                </div>
              </div>
            </div>
            
            <div class="flex justify-end space-x-3 pt-4">
              <button
                type="button"
                id="cancel-btn"
                class="px-4 py-2 border border-gray-600 text-gray-300 rounded-lg hover:bg-gray-800 transition-colors"
              >
                Cancelar
              </button>
              <button
                type="submit"
                id="save-btn"
                class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors"
              >
                Guardar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal de confirmaci√≥n para eliminar -->
  <div id="delete-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-dark-800 rounded-lg max-w-md w-full p-6">
        <div class="flex items-center mb-4">
          <div class="w-12 h-12 bg-red-600 rounded-full flex items-center justify-center mr-4">
            <span class="text-white text-xl">‚ö†Ô∏è</span>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-100">Confirmar eliminaci√≥n</h3>
            <p class="text-gray-400">Esta acci√≥n no se puede deshacer</p>
          </div>
        </div>
        
        <p class="text-gray-300 mb-6" id="delete-message">
          ¬øEst√°s seguro de que quieres eliminar esta fotograf√≠a?
        </p>
        
        <div class="flex justify-end space-x-3">
          <button
            id="cancel-delete"
            class="px-4 py-2 border border-gray-600 text-gray-300 rounded-lg hover:bg-gray-800 transition-colors"
          >
            Cancelar
          </button>
          <button
            id="confirm-delete"
            class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors"
          >
            Eliminar
          </button>
        </div>
      </div>
    </div>
  </div>

    <script>
    import { requireAuth } from '../../services/auth.js';
    import { PhotographyUI } from '../../services/photography.js';

    // Verificar autenticaci√≥n e inicializar UI
    requireAuth().then(user => {
      if (user) {
        console.log('‚úÖ Acceso autorizado a gesti√≥n de fotograf√≠a');
        
        // Inicializar la interfaz de usuario
        const photographyUI = new PhotographyUI();
        
        // Cargar fotograf√≠as inicialmente
        photographyUI.loadPhotography();
        
        // Configurar event listeners b√°sicos
        const addBtn = document.getElementById('add-photo-btn');
        const closeBtn = document.getElementById('close-modal');
        const cancelBtn = document.getElementById('cancel-btn');
        const emptyAddBtn = document.getElementById('empty-add-btn');
        const cancelDeleteBtn = document.getElementById('cancel-delete');

        if (addBtn) addBtn.addEventListener('click', () => photographyUI.openModal());
        if (closeBtn) closeBtn.addEventListener('click', () => photographyUI.closeModal());
        if (cancelBtn) cancelBtn.addEventListener('click', () => photographyUI.closeModal());
        if (emptyAddBtn) emptyAddBtn.addEventListener('click', () => photographyUI.openModal());
        if (cancelDeleteBtn) {
          cancelDeleteBtn.addEventListener('click', () => {
            document.getElementById('delete-modal').classList.add('hidden');
          });
        }
      }
    });
  </script>
</AdminLayout>
